@page "/addDriver"


@layout MainLayout
@inherits FirmaCurierat.Pages.AddDriverComponent

@using Radzen
@using Radzen.Blazor
@using Syncfusion.Blazor.Grids
@using Radzen.Blazor
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Cards

@using Syncfusion.Blazor
@using Syncfusion.Blazor.Popups
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Notifications
<RadzenHeading Size="H1" Text="Register new driver" Style="font-size:large;margin-top:150px; font-weight:bold;">
    <div>
        <hr />
    </div>

</RadzenHeading>
<RadzenCard Style="margin-top: 20px;">
    <RadzenContent Container="main">
        <ChildContent>
            <div class="row">
                <div class="col-md-12">
                    <RadzenTemplateForm Data="@driver" TItem="Models.FirmaCurierat.Soferi">
                        <ChildContent>
                            <DataAnnotationsValidator />
                            <div style="margin-bottom: 1rem" class="row">
                                <div class="col-md-3">
                                    <RadzenLabel Component="Nume" style="font-weight: 500; font-size: medium;" Text="Name">
                                    </RadzenLabel>
                                </div>
                                <div class="col-md-8">
                                    <RadzenTextBox MaxLength="255" style="width: 380px" @bind-Value="@(driver.nume)" Name="name">
                                    </RadzenTextBox>

                                </div>
                            </div>
                            <div style="margin-bottom: 1rem" class="row">
                                <div class="col-md-3">
                                    <RadzenLabel Component="surname" style="font-weight: 500; font-size: medium;" Text="Surname">
                                    </RadzenLabel>
                                </div>
                                <div class="col-md-8">
                                    <RadzenTextBox MaxLength="255" style="width: 380px" @bind-Value="@(driver.prenume)" Name="surname">
                                    </RadzenTextBox>

                                </div>
                            </div>
                            <div style="margin-bottom: 1rem" class="row">
                                <div class="col-md-3">
                                    <RadzenLabel Component="srv_mail_from" style="font-weight: 500; font-size: medium;" Text="Select a car">
                                    </RadzenLabel>
                                </div>
                                <div class="col-md-3">

                                    <Syncfusion.Blazor.DropDowns.SfDropDownList TValue="int" TItem="Models.FirmaCurierat.Masini" @bind-Value="@driver.id_masina" DataSource="@carsList">
                                        <DropDownListEvents TValue="int" TItem="Models.FirmaCurierat.Masini"></DropDownListEvents>
                                        <DropDownListFieldSettings Text="marca" Value="id_masina"></DropDownListFieldSettings>
                                    </Syncfusion.Blazor.DropDowns.SfDropDownList>
                                </div>
                            </div>
                            <div style="margin-bottom: 1rem" class="row">
                                <div class="col-md-3">
                                    <RadzenLabel Component="srv_mail_username" style="font-weight: 500; font-size: medium;" Text="Select a coordinator ">
                                    </RadzenLabel>
                                </div>
                                <div class="col-md-3">
                                    <Syncfusion.Blazor.DropDowns.SfDropDownList TValue="int" TItem="Models.FirmaCurierat.Dispeceri" @bind-Value="@driver.id_dispecer" DataSource="@coordsList">
                                        <DropDownListEvents TValue="int" TItem="Models.FirmaCurierat.Dispeceri"></DropDownListEvents>
                                        <DropDownListFieldSettings Text="nume" Value="id_dispecer"></DropDownListFieldSettings>
                                    </Syncfusion.Blazor.DropDowns.SfDropDownList>

                                </div>
                            </div>


                            <div style="margin-bottom: 1rem" class="row">
                                <div class="col-md-2 align-items-center d-flex" style="margin-right:-5px; margin-left:150px;">
                                    <RadzenButton ButtonStyle="ButtonStyle.Danger" Text="Register Now" >
                                    </RadzenButton>
                                </div>
                                <div class="col-md-2" style="">
                                    <RadzenButton ButtonType="Radzen.ButtonType.Button" ButtonStyle="ButtonStyle.Danger" Text="Back" >
                                    </RadzenButton>
                                </div>
                            </div>
                        </ChildContent>
                    </RadzenTemplateForm>
                </div>
            </div>
        </ChildContent>
    </RadzenContent>
</RadzenCard>
