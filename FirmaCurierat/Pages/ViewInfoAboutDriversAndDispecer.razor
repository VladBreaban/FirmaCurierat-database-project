@page "/view-general"

@layout MainLayout
@inherits FirmaCurierat.Pages.ViewInfoAboutDriversAndDispecerComponent

@using Radzen
@using Radzen.Blazor
@using Syncfusion.Blazor.Grids
@using Radzen.Blazor

@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Popups
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Notifications

<RadzenHeading Size="H5" Text="General information about drivers and supervisor" Style="font-size:x-large;margin-top:60px; font-weight:bold;">

</RadzenHeading>

<hr />
<br />

<div style="margin-top:70px;">
    <Syncfusion.Blazor.Cards.SfCard>



        <SfGrid  DataSource="interestList" ShowColumnChooser="true" AllowSorting="true" AllowResizing="true" AllowPaging="true"
                AllowSelection="true">

            <GridEvents TValue="infoForTheGrid"></GridEvents>
            <GridPageSettings PageCount="6" PageSize="5"></GridPageSettings>

            <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Single"></GridSelectionSettings>

            <GridColumns>
                <GridColumn Field=@nameof(infoForTheGrid.nume) AutoFit="true" HeaderText="Driver Name" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>
                <GridColumn Field=@nameof(infoForTheGrid.prenume) AutoFit="true" HeaderText="Driver Surname" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>
                <GridColumn Field=@nameof(infoForTheGrid.nume_dispecer) AutoFit="true" HeaderText="Supervisor name" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>

            </GridColumns>
        </SfGrid>
    </Syncfusion.Blazor.Cards.SfCard>
</div>